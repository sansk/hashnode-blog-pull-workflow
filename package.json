{
  "name": "hashnode-blog-pull-workflow",
  "version": "1.0.0",
  "description": "✍️ Hashnode Blog Action to pull and display latest Blog post from Hashnode in your profile README",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "ncc build src/index.js --license licenses.txt",
    "dev:local": "npm run build && node -r dotenv/config dist/index.js dotenv_config_path=.env.local",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "prepare": "npm run build",
    "pre-commit": "npm run lint && npm run test"
  },
  "keywords": [
    "github-action",
    "hashnode",
    "blog",
    "readme",
    "automation"
  ],
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "axios": "^1.11.0",
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.3",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "jest": "^30.1.1",
    "prettier": "^3.6.2"
  },
  "license": "MIT",
  "author": "sansk",
  "homepage": "https://github.com/sansk/hashnode-blog-pull-workflow#readme",
  "bugs": {
    "url": "https://github.com/sansk/hashnode-blog-pull-workflow/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sansk/hashnode-blog-pull-workflow.git"
  },
  "engines": {
    "node": ">=20"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
